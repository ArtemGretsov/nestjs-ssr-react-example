{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "ssr.config.js"
  ],
  "include": [
    "src"
  ]
}
